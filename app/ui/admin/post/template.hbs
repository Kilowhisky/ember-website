<form class="container">
  <section class="post">
    <header class="level">
      {{input class="input is-large" placeholder="Post Title" value=model.post.title}}
    </header>
    <div class="content">
      {{input class="input" placeholder="Unique URL slug (used as identifier)" value=model.post.id}}
    </div>
    <div class="content">
      {{tinymce-editor  value=model.post.content onValueChanged=(action (mut model.post.content))}}
    </div>
    <button class="button is-large is-primary" {{action 'save' model}}>
      {{fa-icon "save"}}&nbsp;Save
    </button>
    {{#unless model.isNew}}
      <button class="button is-large is-danger" {{action 'delete' model}}>
        {{fa-icon 'trash'}}&nbsp;Delete
      </button>
    {{/unless}}
  </section>
</form>
